{
  "name": "webtheory/wp-library",
  "description": "Wordpress helpers and features library",
  "type": "wordpress-muplugin",
  "license": "GPL-3.0-or-later",

  "authors": [
    {
      "name": "Chris Williams",
      "email": "spider.mane.web@gmail.com"
    }
  ],

  "require": {
    "php": ">=7.0.0",
    "composer/installers": "^1.7",
    "filp/whoops": "^2.5",
    "myclabs/deep-copy": "^1.8",
    "respect/validation": "^1.1",
    "twig/twig": "^2.0",
    "webtheory/backalley": "~0.6.4"
  },

  "autoload": {
    "psr-4": {
      "Backalley\\": "src/"
    },
    "files": ["backalley-starter.php"]
  },

  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}": ["type:wordpress-muplugin", "type:wordpress-plugin"]
    }
  },

  "config": {
    "sort-packages": true
  }
}
